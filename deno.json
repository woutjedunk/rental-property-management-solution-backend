{
  "tasks": {
    "dev": "deno task db:start && deno run -A --watch src/main.ts --env-file",
    "migrate": "deno task db:start && deno run --allow-env --allow-read prisma migrate deploy",
    "generate": "deno task db:start && deno run --allow-env --allow-read prisma generate --schema=./src/config/prisma/schema.prisma",
    "studio": "deno task db:start && deno run --allow-env --allow-read prisma studio",
    "check": "deno lint && deno task prisma check",
    "update": "deno run --allow-read=./ --allow-net --allow-write=./ https://deno.land/x/deno_outdated@0.2.5/cli.ts && deno install",
    "db": "docker compose -f ./.dev/database/docker-compose.yml",
    "db:build": "deno task db build",
    "db:start": "deno task db up -d",
    "db:stop": "deno task db down",
    "prisma": "deno run --env -A --node-modules-dir npm:prisma"
  },
  "imports": {
    "@prisma/client": "npm:@prisma/client@^6.2.1",
    "@std/assert": "jsr:@std/assert@1",
    "@std/testing": "jsr:@std/testing@^1.0.8",
    "@types/express": "npm:@types/express@^5.0.0",
    "express": "npm:express@^4.21.2",
    "prisma": "npm:prisma@^6.2.1",
    "prisma-migrate": "npm:prisma-migrate@^0.0.2",
    "reflect-metadata": "npm:reflect-metadata@^0.2.2",
    "tsyringe": "npm:tsyringe@^4.8.0",
    "zod": "npm:zod@^3.24.1",
    "@model/": "./src/domain/model/",
    "@config/": "./src/config/",
    "@application/": "./src/application/",
    "@persistence/": "./src/infra/persistence/",
    "@controller/": "./src/controller/"
  },
  "nodeModulesDir": "auto",
  "prisma": {
    "schema": "./src/config/prisma/schema.prisma"
  },
  "compilerOptions": {
    "experimentalDecorators": true
  }
}
